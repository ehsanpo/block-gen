<section class="links-block {% if class %}{{class}}{% endif %}"> 
	<div class="wrapper">
		<div class="grid--auto-c">
			{% for item in links %}
				<div class="link">
					{% if item.link_type == 'url' %}
						<a target="_blank" rel="noreferrer" href="{{ item.link_url }}" >
					{% else %}
						<a href="{{ item.link_page }}" >
					{% endif %}
					{% if item.icon %}
						{% if item.is_icon %}
							<img {{item.icon|get_timber_image_responsive('news') }} class="is_icon">
						{% else %}
							<img {{item.icon|get_timber_image_responsive('news') }}>
						{% endif %}
					{% endif %}
					</a>
					<div class="content">
						{% if item.link_type == 'url' %}
							<a target="_blank" rel="noreferrer" href="{{ item.link_url }}" >
						{% else %}
							<a href="{{ item.link_page }}" >
						{% endif %}
							<h3>{{item.title}}</h3>
						</a>
						{{item.body_text}}
						{% if item.link_text %}
							{% if item.link_type == 'url' %}
								<a target="_blank" rel="noreferrer" href="{{ item.link_url }}" class="btn">{{ item.link_text }}</a>
							{% endif %}
							{% if item.link_type == 'page' %}
								<a href="{{ item.link_page }}" class="btn">{{ item.link_text }}</a>
							{% endif %}
						{% endif %}
					</div>
				</div>
			{% endfor %}
		</div>
	</div>
</section>
